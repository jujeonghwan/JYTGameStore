@model IEnumerable<JYTGameStore.Models.Category>

<div class="container p-1">
    <ol class="breadcrumb">
        Admin &gt; Category &gt; Category List
    </ol>

    <div class="row p-3">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">Create New Category</a>
        </div>
    </div>

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Category Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="80%">@obj.CategoryName</td>
                        <td class="text-center">
                            <div class="w-100 btn-group" role="group">
                                <a asp-controller="Category" asp-route-CategoryId="@obj.CategoryId" asp-action="Edit" class="btn btn-primary mx-1">Edit</a>
                                <a asp-controller="Category" asp-route-CategoryId="@obj.CategoryId" asp-action="Delete" class="btn btn-danger mx-1">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No category exists.</p>
    }
</div>