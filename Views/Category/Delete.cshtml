@model JYTGameStore.Models.Category

<div class="container p-1">
    <ol class="breadcrumb">
        Admin &gt; Category &gt; Delete Category
    </ol>

    <div class="row p-3">
        <div class="col-6">
            <h2 class="text-info">Delete Category</h2>
        </div>
        <div class="col-6 text-right">&nbsp;</div>
    </div>

    <form method="post" asp-action="DeletePost">
        <input asp-for="CategoryId" hidden />

        <div class="border p-3">
            <div class="row">
                <div class="col-8">
                    <div class="form-group row">
                        <div class="col-4 text-right">
                            <label asp-for="CategoryName"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="CategoryName" disabled class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="col-4">&nbsp;</div>
            </div>
        </div>

        <div class="row pt-3">
            <div class="col-2 offset-4">
                <input type="submit" class="btn btn-danger w-100" value="Delete" />
            </div>
            <div class="col-2">
                <a asp-action="Index" class="btn btn-success w-100">Back</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial.cshtml" />
    }
}