@model JYTGameStore.Models.GameModel

<div class="border p-3">
    <div class="form-group row">
        <h2 class="text-info pl-3">Game Details</h2>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="form-group row">
                <table class="table table-bordered table-striped" style="width:100%">
                    <thead class="thead-dark">
                        <tr>
                            <th class="text-center">
                                <h3>Game Name</h3>
                            </th>
                            <th class="text-center">
                                <h3>Game Description</h3>
                            </th>
                            <th class="text-center">
                                <h3>Release Date</h3>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.gameList.Count; i++)
                        {
                        <tr>
                            <td width="30%">@Model.gameList[i].GameName</td>
                            <td width="70%">@Model.gameList[i].GameDescription</td>
                            <td width="70%">@Model.gameList[i].releaseDate.ToString()</td>
                        </tr>
                        }
                    </tbody>
                </table>

                        <div class="col-4 offset-4 row">
                            <div class="col">
                                @*use the same controller so no specify asp-controller*@
                                <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i>Go the the prevous page</a>
                            </div>
                        </div>

            </div>
    </div>
</div>




