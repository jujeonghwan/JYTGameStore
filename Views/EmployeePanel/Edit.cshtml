@model JYTGameStore.Models.Game
@*It finds post action method creat*@
<form method="post" asp-action="Edit">

    @*To get id as well when post the form*@
    <input asp-for="gameId" hidden />

    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Edit Game here</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="GameName">Game Name</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="GameName" class="form-control" />
                        <span asp-validation-for="GameName" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="GameDescription">Game Description</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="GameDescription" class="form-control" />
                        <span asp-validation-for="GameDescription" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Edit a game" />
                        </div>
                        <div class="col">
                            @*use the same controller so no specify asp-controller*@
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i>Cancel</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@*Client side validation*@
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" } />
    }
}
