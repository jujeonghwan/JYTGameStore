@model IEnumerable<JYTGameStore.Models.Game>

<div class="container p-3">

    <div class="row pt-lg-5 text-lg-center">
        <div class="col-6 bg-info">
            <h2 class="text-light">Game List</h2>
        </div>
    </div>

    <div class="col-12 text-lg-right">
        @*It links to create action in EmployeePanelController*@
        <a asp-action="Create" asp-controller="EmployeePanel" class="btn btn-success">Create a new game</a>
    </div>

    <br /><br />
    @*Should use capital m to access the model in the view*@
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead class="thead-dark">
                <tr>
                    <th class="text-center">
                        <h3>Game Name</h3>
                    </th>
                    <th class="text-center">
                        <h3>Game Description</h3>
                    </th>
                    <th class="text-center">
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var eachObj in Model)
                {
                    <tr>
                        <td width="30%">@eachObj.GameName</td>
                        <td width="40%">@eachObj.GameDescription</td>
                        <td width="30%" class="text-center">
                            <div class="w-100" role="group">
                                <a asp-controller="EmployeePanel" asp-route-id="@eachObj.gameId" asp-action="Edit" class="btn btn-info">
                                    Edit
                                </a>
                                <a asp-controller="EmployeePanel" asp-route-id="@eachObj.gameId" asp-action="Delete" class="btn btn-warning">
                                    Delete
                                </a>
                                <a asp-controller="EmployeePanel" asp-route-id="@eachObj.gameId" asp-action="Delete" class="btn btn-primary">
                                    Download Report
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No game exist.</p>
    }
</div>

